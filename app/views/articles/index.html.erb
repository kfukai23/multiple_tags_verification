<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Tags</h1>

<table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Article_id</th>
        <th>User_id</th>
        <th>Created_at</th>
      </tr>
    </thead>
  
    <tbody>
      <% @tags.each do |tag| %>
        <tr>
          <td><%= tag.id %></td>
          <td><%= tag.name %></td>
          <td><% tag.articles.each do |article| %>
                <%= article.id %> 
              <% end %>
          </td>
          <td><%= tag.user_id %></td>
          <td><%= tag.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<br>

<%= link_to 'New Article', new_article_path %>
